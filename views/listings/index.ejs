<% layout('./layouts/boilerplate') -%>

<div class="addList">
    <button class="btn"><a class="btn btn-danger" href="/listings/new">Travendus Your Home</a></button>
</div>

<div id="filters">
    
    <div class="filter bt Trending">
        <div class="icon"><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
    </div>
    <div class="filter bt Rooms">
        <div class="icon"><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
    </div>
    <div class="filter bt Iconic">
        <div class="icon"><i class="fa-solid fa-mountain-sun"></i></div>
        <p>Iconic Citys</p>
    </div>
    <div class="filter bt Castles">
        <div class="icon"><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
    </div>
    <div class="filter bt Beach">
        <div class="icon"><i class="fa-solid fa-umbrella-beach"></i></div>
        <p>Beach</p>
    </div>
    <div class="filter bt Boats">
        <div class="icon"><i class="fa-solid fa-sailboat"></i></div>
        <p>Boats</p>
    </div>
    <div class="filter bt Campervan">
        <div class="icon"><i class="fa-solid fa-caravan"></i></div>
        <p>Campervan</p>
    </div>

    <div class="tax-toogle navbar-nav">
        <div class="form-check form-switch form-check-reverse nav-item">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">TAX <span class="cate">$ CATEGORY</span></label>
          </div>
    </div>
    
    
    
</div>
<div class="row lists">
    
    <div class="alert alert-danger search-result" role="alert">
        Not Found!
    </div>
   
        <% for (let list of allListings) {%>
            <div class="card card-listing" style="width: 18rem;">
                <img src="<%= list.image.url %>" class="card-img-top" alt="...">
                <div class="card-img-overlay">
                    <a style="color: black;display: flex; justify-content: center; align-items: center; width: 100%; height: 100%;" href="/listings/<%= list._id %>"><b><%= list.title %></b></a>
         
                </div>
                <div class="card-body border-bottom">
                    <p class="card-text"><a href="/listings/<%= list._id %>"><b><%= list.title %></b></a></p>
                    
                </div>
                <div class="card-body">
                    <a href="/listings/<%= list._id %>" class="card-link">&#8377;  <%= list.price.toLocaleString('en-IN') %></a>
                    <i class="tax-info">+ 18% GST</i><span class="category">( <%= list.category %> )</span>
                </div>
            </div>
            <% } %>
    
    

</div>

<script>
    let toggler = document.getElementById("flexSwitchCheckDefault");
    toggler.addEventListener("click", () => {
      let taxInfo = document.getElementsByClassName("tax-info");
      let categories = document.querySelectorAll(".category");
      for (info of taxInfo) {
        if (info.style.display!="inline"){
            info.style.display = "inline";
        }else {
            info.style.display = "none";
        }
      }
      for (category of categories) {
        if(category.style.display !== "block") {
            category.style.display = "block";
        } else {
            category.style.display = "none";
        }
      }
      
      
      
      
  });
</script>
